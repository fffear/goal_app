<h1>Login Page</h1>
<%= render 'layouts/errors' %>

<form action="<%= session_url %>" method="post">
  <%= auth_token %>

  <label for="email">Email:</label>
  <input id="email" type="text" name="user[email]" value="<%= @user.email if @user %>">

  <br>

  <label for="password">Password:</label>
  <input id="password" type="password" name="user[password]" value="<%= @user.password if @user %>">

  <br>

  <%= submit_button("Login User") %>
</form>